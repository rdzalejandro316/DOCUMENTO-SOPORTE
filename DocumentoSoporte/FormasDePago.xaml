<Window x:Class="DocumentoSoporte.FormasDePago"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentoSoporte"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        Title="FormasDePago" Height="350" Width="800" Loaded="Window_Loaded" PreviewKeyDown="Window_PreviewKeyDown">
    
    <Window.Resources>        <SolidColorBrush Color="#0078d4" x:Key="ColorMain"/>        <SolidColorBrush Color="#FF0667B2" x:Key="ColorSecond"/>        <Style TargetType="syncfusion:GridHeaderCellControl" x:Key="headerStyle">            <Setter Property="FontWeight" Value="Bold"/>            <Setter Property="FontSize" Value="10"/>            <Setter Property="Foreground" Value="LightGray"/>            <Setter Property="Background" Value="#373737"/>        </Style>    </Window.Resources>    <Grid Name="GridMain" Background="White">        <Grid.RowDefinitions>            <RowDefinition Height="80"/>            <RowDefinition Height="1*"/>            <RowDefinition Height="40"/>        </Grid.RowDefinitions>        <Grid Grid.Row="0" Grid.ColumnSpan="2">            <Grid.ColumnDefinitions>                <ColumnDefinition Width="1*"/>                <ColumnDefinition Width="120"/>                <ColumnDefinition Width="230"/>            </Grid.ColumnDefinitions>            <Grid>                <Grid.RowDefinitions>                    <RowDefinition/>                    <RowDefinition/>                </Grid.RowDefinitions>                <StackPanel Orientation="Horizontal">                    <TextBlock Text="Formas de pago: " VerticalAlignment="Center" Margin="10 0 0 0" FontWeight="DemiBold" />                    <syncfusion:ComboBoxAdv Name="CBFormapag" VerticalAlignment="Center" Width="160" syncfusion:SkinStorage.VisualStyle="Metro"/>                </StackPanel>                <StackPanel Grid.Row="1" Orientation="Horizontal">                    <TextBlock Text="Medios de Pago: " VerticalAlignment="Center" Margin="10 0 0 0" FontWeight="DemiBold" />                    <syncfusion:ComboBoxAdv Name="CBpagos" VerticalAlignment="Center" Width="200" syncfusion:SkinStorage.VisualStyle="Metro"/>                    <Button Name="BtnAdd" Width="30" Height="25" Margin="10 0 0 0" Background="DodgerBlue" BorderBrush="{x:Null}" Click="Btnadd_Click" Cursor="Hand">                        <Image Source="imagenes\plus.png" Margin="5"/>                    </Button>                    <Button Name="BtnDel" Width="30" Height="25" Margin="10 0 0 0" Background="DodgerBlue" BorderBrush="{x:Null}" Click="BtnDel_Click" Cursor="Hand">                        <Image Source="imagenes\bin2.png" Margin="5"/>                    </Button>                </StackPanel>            </Grid>            <TextBlock Grid.Column="1" Text="Saldo por Pagar:" VerticalAlignment="Center" FontSize="13" FontWeight="Bold" HorizontalAlignment="Right" Margin="1,1,5,1"/>            <Border Background="Black" Grid.Column="3">                <TextBox Focusable="False" Text="0" FontSize="25" x:Name="TxtTotalRecaudo" Foreground="DodgerBlue" Width="210" Height="35" Background="Transparent" HorizontalContentAlignment="Right" Margin="5,5,5,5"/>            </Border>        </Grid>        <Grid Grid.Row="1" Margin="5,5,5,5" Grid.ColumnSpan="2">            <syncfusion:SfDataGrid Name="dataGrid"  Grid.Row="1" EnableDataVirtualization = "True" AutoGenerateColumns="False"  FontSize="12"  SelectionMode="Single" HeaderStyle="{StaticResource headerStyle}"  PreviewKeyDown="dataGrid_PreviewKeyDown" CurrentCellEndEdit="dataGrid_CurrentCellEndEdit">                <syncfusion:SfDataGrid.Columns>                    <syncfusion:GridTextColumn HeaderText="Codigo" MappingName="cod_pag" Width="140" />                    <syncfusion:GridTextColumn HeaderText="Forma Pago" MappingName="nom_pag" Width="300"/>                    <syncfusion:GridNumericColumn HeaderText="Valor A Pagar" AllowEditing="True" MappingName="valor" NumberDecimalSeparator="." NumberDecimalDigits="2" NumberGroupSeparator=","  NumberGroupSizes="3" Width="200"/>                    <syncfusion:GridTextColumn HeaderText="Fpago" MappingName="cod_tpag" Width="60"/>                </syncfusion:SfDataGrid.Columns>            </syncfusion:SfDataGrid>        </Grid>        <Grid Grid.Row="2" Grid.ColumnSpan="2" >            <Grid.ColumnDefinitions>                <ColumnDefinition Width="100"/>                <ColumnDefinition Width="100"/>                <ColumnDefinition Width="300"/>                <ColumnDefinition Width="80"/>                <ColumnDefinition Width="100"/>            </Grid.ColumnDefinitions>            <Button Content="F5=Grabar" Margin="5,5,5,5" Grid.Column="0" x:Name="BtnGrabar" Click="BtnGrabar_Click" Background="{StaticResource ColorMain}" BorderBrush="{StaticResource ColorMain}" Foreground="White"/>            <Button Content="Cancelar" Margin="5,5,5,5" Grid.Column="1" Click="Button_Exit" Background="{StaticResource ColorMain}" BorderBrush="{StaticResource ColorMain}" Foreground="White"/>            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" >                <TextBlock Text="F8=Cancela Saldo" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource ColorMain}"  Margin="5"/>            </StackPanel>            <TextBlock Text="Total Pago:" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold"/>            <TextBlock x:Name="TxtTotalPagado" Text="0" Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15"/>        </Grid>    </Grid>

</Window>
